<div class="flex flex-col md:flex-row gap-6">

  <!-- Form Tambah Kontak -->
  <div class="md:w-1/3">
    <div class="bg-white shadow-lg rounded-xl p-6">
      <h2 class="text-2xl font-semibold mb-5 text-blue-700">Tambah Kontak</h2>
      <form action="/contact" method="POST" class="space-y-4">
        <div>
          <label for="name" class="block text-gray-700 font-medium mb-1">Nama</label>
          <input type="text" id="name" name="name" placeholder="Nama" required
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300">
        </div>
        <div>
          <label for="phone" class="block text-gray-700 font-medium mb-1">No. Telepon</label>
          <input type="text" id="phone" name="phone" placeholder="0812xxxx" required
                 class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300">
        </div>
        <button type="submit" class="w-full bg-blue-200 text-blue-900 font-medium py-2 rounded-lg hover:bg-blue-300 transition">
          Tambah
        </button>
      </form>
    </div>
  </div>

  <!-- List Kontak -->
  <div class="md:w-2/3">
    <div class="bg-white shadow-lg rounded-xl p-6">
      <h2 class="text-2xl font-semibold mb-5 text-blue-700">Daftar Kontak</h2>
      <% if (contacts.length === 0) { %>
        <p class="text-gray-500">Belum ada kontak.</p>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr class="bg-blue-50 text-blue-800">
                <th class="px-4 py-2 border border-gray-200">#</th>
                <th class="px-4 py-2 border border-gray-200">Nama</th>
                <th class="px-4 py-2 border border-gray-200">No. Telepon</th>
                <th class="px-4 py-2 border border-gray-200">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% contacts.forEach((contact, index) => { %>
                <tr class="hover:bg-blue-50">
                  <td class="px-4 py-2 border border-gray-200"><%= index + 1 %></td>
                  <td class="px-4 py-2 border border-gray-200"><%= contact.name %></td>
                  <td class="px-4 py-2 border border-gray-200"><%= contact.phone %></td>
                  <td class="px-4 py-2 border border-gray-200 flex gap-2">
                    <a href="/contact/edit/<%= index %>" class="bg-yellow-200 text-yellow-800 px-3 py-1 rounded hover:bg-yellow-300 transition">
                      Edit
                    </a>
                    <form action="/contact/delete" method="POST" onsubmit="return confirm('Yakin mau hapus?')">
                      <input type="hidden" name="index" value="<%= index %>">
                      <button type="submit" class="bg-pink-200 text-pink-800 px-3 py-1 rounded hover:bg-pink-300 transition">
                        Hapus
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>

</div>
