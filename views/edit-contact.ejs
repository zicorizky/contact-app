<div class="max-w-md mx-auto bg-white shadow-lg rounded-xl p-6 mt-10">
  <h2 class="text-2xl font-semibold mb-5 text-blue-600">Edit Kontak</h2>
  <form action="/contact/edit/<%= index %>" method="POST" class="space-y-4">
    <div>
      <label for="name" class="block text-gray-700 font-medium mb-1">Nama</label>
      <input type="text" id="name" name="name" value="<%= contact.name %>" required
             class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300">
    </div>
    <div>
      <label for="phone" class="block text-gray-700 font-medium mb-1">No. Telepon</label>
      <input type="text" id="phone" name="phone" value="<%= contact.phone %>" required
             class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-300">
    </div>
    <div class="flex gap-4">
      <button type="submit" class="w-1/2 bg-blue-200 text-blue-800 font-medium py-2 rounded-lg hover:bg-blue-300 transition">
        Simpan
      </button>
      <a href="/contact" class="w-1/2 text-center bg-gray-200 text-gray-700 font-medium py-2 rounded-lg hover:bg-gray-300 transition">
        Batal
      </a>
    </div>
  </form>
</div>
